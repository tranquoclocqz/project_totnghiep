<div class='row main'>
	<div class="col-sm-9 col-sm-offset-3">
	<div class="panel-heading">
	       <div class="panel-title text-center">
	       		<h1 class="title">Cập nhật danh mục cha</h1><small><%= nhasx.tennhasanxuat %></small>
	       		<hr />
	       	</div>
	    </div> 
		<form method="post" action="/admin/nhasanxuat/sua-<%= nhasx.id %>" class="form-horizontal">
		<input type='hidden' name='_csrf' value='<%= _csrf %>'>
			<div class="form-group">
				<label class="col-sm-2 label-control">Danh mục cha</label>
				<div class="col-sm-10">
					<select name="cbo_danh_muc_cha" id="cbo_danh_muc_cha" class="form-control">
					<% tb.forEach(function(value){ %>						
							<option value="<%=value.id%>"
							<% if(nhasx.idthietbi == value.id){ %>
							selected
							<% } %>><%=value.tenthietbi%></option>						
					<% }) %>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 label-control">Tên danh mục</label>
				<div class="col-sm-10">
					<input type="text" name="txt_ten_danh_muc" id="txt_ten_danh_muc" class="form-control" value="<%= nhasx.tennhasanxuat %>">
				</div>
			</div>
			<div class="form-group">
				<input type="submit" name="btn_them" class="btn btn-primary" value="Cập nhật">
			</div>
		</form>
		<% if(req.flash('success')){ %>
		<div class='alert alert-success'>
			<%-req.flash('success')%>
		</div>
		<% } %>
	</div>
</div>