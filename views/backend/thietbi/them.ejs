<div class='row main'>
	<div class="col-sm-9 col-sm-offset-3">
		<div class="panel-heading">
	       <div class="panel-title text-center">
	       		<h1 class="title">Thêm danh mục cha</h1>
	       		<hr />
	       	</div>
	    </div> 
		<form method="<%= them.method %>" action="<%= them.url %>" class="form-horizontal">
		 <input type='hidden' name='_csrf' value='<%= _csrf %>'>
			<div class="form-group">
				<label class="col-sm-2 label-control">Tên danh mục</label>
				<div class="col-sm-10">
					<input type="text" name="txt_tendanhmuc" class="form-control">
				</div>				
			</div>
			<div class='form-group'>
				<input type="submit" name="btn_them" class="btn btn-primary" value="Thêm">
			</div>
		</form>
		<% if(req.flash('success').length > 0){ %>
			<div class='alert alert-success'>
				<%- req.flash('success') %>
			</div>
		<% } %>
	</div>
</div>
