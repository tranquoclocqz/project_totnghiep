<div class='row main'>
	<div class="col-sm-9 col-sm-offset-3">		
		<div class="panel-heading">
	       <div class="panel-title text-center">
	       		<h1 class="title">Cập nhất thông tin thiết bị <small><%=obj.tenthietbi%></small></h1>
	       		<hr />
	       	</div>
	    </div> 
		<form method="post" action="/admin/thietbi/sua-<%=obj.id%>" class="form-horizontal">
		 <input type='hidden' name='_csrf' value='<%= _csrf %>'>
			<div class="form-group">
				<label class="col-sm-2 label-control">Tên thiết bị</label>
				<div class="col-sm-10">
					<input type="text" name="txt_tendanhmuc" class="form-control" value='<%=obj.tenthietbi%>'>
				</div>				
			</div>
			<div class='form-group'>
				<input type="submit" name="btn_them" class="btn btn-primary" value="Cập nhật">
			</div>
		</form>
		<% if(req.session.flash && req.session.flash.err){ %>
			<% var j = req.flash('err')[0] %>                    
					<% Object.keys(j).forEach(function(err){ %>				
				<div class="alert alert-danger">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
					<strong>Lỗi</strong>
						<%= JSON.stringify(j[err][0].message) %>                        
				</div>
					<% }) %>                   
			<% } %>
		<% if(req.session.flash && req.session.flash.success){ %>
			<div class="alert alert-success">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
					<%= req.flash('success') %>
			</div>
		<% } %>
	</div>
</div>
