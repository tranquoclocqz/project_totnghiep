<% include ../../frontend/index/slider %>
    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo1">
                        <i class="fa fa-refresh"></i>
                        <p>30 Days return</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo2">
                        <i class="fa fa-truck"></i>
                        <p>Free shipping</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo3">
                        <i class="fa fa-lock"></i>
                        <p>Secure payments</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo4">
                        <i class="fa fa-gift"></i>
                        <p>New products</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End promo area -->
   <script>
        // accounting.formatMoney($("ins").text(), options);        
    </script>
    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Sản phẩm được mua nhiều</h2>
                        <div class="product-carousel">
                            <% sanpham.forEach(function(value){%>
                                 <div class="col-sm-12">
                                    <div class="thumbnail">
                                        <a href="/chitiet/<%= value.slug %>/<%= value.id %>.html" title="<%= value.tensanpham %>">
                                            <img src="images/anhdaidien/<%= value.anhdaidien %>" alt="<%= value.tensanpham %>">
                                        </a>
                                        <div class="caption text-center">
                                            <h3 style="">
                                                <a href="/chitiet/<%= value.slug %>/<%= value.id %>.html" title="<%= value.tensanpham %>">
                                                    <%= value.tensanpham %>
                                                </a>
                                            </h3>                                            
                                            <% if(value.khuyenmai !='0'){ %>
                                                <p>
                                                    <%= accounting.formatMoney(value.khuyenmai,options) %><sup style="color: red">KM</sup>
                                                </p>
                                                <% } else { %>
                                                    <p>
                                                 <%= accounting.formatMoney(value.gia,options) %>
                                                 </p>
                                                <% } %>
                                                    <p>
                                                        <a href="/addtocart/<%= value.id %>" class="btn btn-primary">Mua ngay</a>
                                                    </p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
    <!-- End main content area -->

    <div class="brands-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="brand-wrapper">
                        <div class="brand-list">
                            <img src="asset/img/brand1.png" alt="">
                            <img src="asset/img/brand2.png" alt="">
                            <img src="asset/img/brand3.png" alt="">
                            <img src="asset/img/brand4.png" alt="">
                            <img src="asset/img/brand5.png" alt="">
                            <img src="asset/img/brand6.png" alt="">
                            <img src="asset/img/brand1.png" alt="">
                            <img src="asset/img/brand2.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End brands area -->

    <div class="product-widget-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
            <% topsanpham.forEach(function(sanpham){ %>
                <div class="col-sm-3 text-center">
                    <div class="product-main" style="border:1px solid #dddddd;    margin-bottom: 20px;"">
                        <a href="/chitiet/<%= sanpham.slug %>/<%= sanpham.id %>.html">
                            <img src="images/anhdaidien/<%= sanpham.anhdaidien %>" alt="<%= sanpham.tensanpham %>"   class="img img-responsive">
                        </a>
                        <div class="product-buttom">
                            <h3>
                            <a href="/chitiet/<%= sanpham.slug %>/<%= sanpham.id %>.html">
                            <%= sanpham.tensanpham %>
                                </a>
                            </h3>
                            <% if(sanpham.khuyenmai !='0'){ %>
                                <p>
                                    <%= accounting.formatMoney(sanpham.khuyenmai,options) %><sup style="color: red">KM</sup>
                                </p>
                                <% } else { %>
                                    <p>
                                 <%= accounting.formatMoney(sanpham.gia,options) %>
                                 </p>
                                <% } %>
                        </div>
                    </div>
                </div>  
            <% }) %>              
            </div>
        </div>
    </div>
    <!-- End product widget area -->