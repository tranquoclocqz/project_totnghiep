<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="logo">
                    <h1><a href="/"><img src="asset/img/logo.png"></a></h1>
                </div>
            </div>
            <div class="col-sm-4" style="margin-top:40px">
                <div class="input-group">
                    <input type="text" placeholder="Search products..." style="width:100%" id="keyup">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
                <div>
                    <ul class="ketqua">

                    </ul>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $("#keyup").keyup(function () {
                        var search = null;
                        var value = $(this).val();
                        if (value.length > 0) {
                            if (search != null) {
                                search.abort();
                            }
                            search = $.ajax({
                                type: "GET",
                                url: '/timkiem/' + value,
                                data: {
                                    key: value,
                                },
                                success: function (data) {
                                    if (data != '')
                                        $(".ketqua").html(data);
                                    else
                                        $(".ketqua").html('<li><a>Không có kết quả</a></li>');
                                }
                            })
                        } else{
                            $(".ketqua").html('');
                        }
                    });
                });
            </script>
            <div class="col-sm-4">
                <div class="shopping-item">
                    <% if(req.session.cart){ %>
                        <a href="/cart">Cart - <span class="cart-amunt"><%= qty %></span></a>
                        <% } else { %>
                            <a href="/cart">Cart - <span class="cart-amunt">0</span></a>
                            <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End site branding area -->